<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/font_7"
        android:paddingRight="@dimen/font_7"
        android:paddingTop="@dimen/font_3"
        android:background="@drawable/time_background"
        android:paddingBottom="@dimen/font_3"
        android:layout_margin="@dimen/size_20"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过3s"
            android:textColor="@color/bg_cc"
            android:textSize="@dimen/size_12" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_flush"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/flush" />

</RelativeLayout>
